<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Setup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@color/colorAccent"
                android:padding="15dp"
                android:text="Setup"
                android:textSize="25dp" />


            <Button
                android:id="@+id/WeightFormBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back"/>
            //android:layout_marginLeft="40dp"
            //android:layout_marginRight="40dp"/>


            <EditText
                android:id="@+id/WeightFormDate"
                android:drawableLeft="@drawable/ic_action_date"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"/>

            <EditText
                android:id="@+id/WeightFormWeight"
                android:drawableLeft="@drawable/ic_action_weight"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Weight(kg)"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"/>

            <Button
                android:id="@+id/WeightFormSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"/>



        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>